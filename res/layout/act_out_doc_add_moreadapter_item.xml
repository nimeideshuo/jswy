<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp" >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:maxEms="8"
        android:singleLine="true"
        android:text="这是测试商品"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvBarcode"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:maxEms="8"
        android:singleLine="true"
        android:text="123454432"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvBarcode"
        android:background="@drawable/btn_operation_selector"
        android:text="件"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_dicPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnUnit"
        android:text="0.0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_specification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnUnit"
        android:layout_below="@+id/btnUnit"
        android:layout_marginRight="18dp"
        android:text="规格:1*12"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_Bfci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnUnit"
        android:text="tv_Bfci"
        android:textColor="#cc0000"
        android:textSize="14sp" />

    <com.ahjswy.cn.views.CleanableEditText
        android:id="@+id/etNum"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/btnUnit"
        android:layout_alignBottom="@+id/btnUnit"
        android:layout_toRightOf="@+id/btnUnit"
        android:background="@drawable/login_panel_edit_bg"
        android:drawableRight="@drawable/search_clear_pressed"
        android:ems="10"
        android:inputType="numberDecimal"
        android:singleLine="true" >
    </com.ahjswy.cn.views.CleanableEditText>

</RelativeLayout>