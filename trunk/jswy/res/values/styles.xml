<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="m_order_title">
        <item name="android:textSize">@dimen/list_item_title</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/title_divider</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="style_function_menu">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/btn_main_item</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@color/main_bg</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBar.Text</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.DeviceDefault.ActionBar">
        <item name="android:background">@drawable/app_title</item>
        <item name="android:titleTextStyle">@style/ActionBar.Text</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>

    <style name="ActionBar.Text" parent="@style/ActionBar">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="mystyle" parent="android:Theme">
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowBackground">@color/main_bg</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 加上 popu  winds   弹出效果 -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="MyAppTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">50dip</item>
    </style>

    <style name="buttom_in_out" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/buttom_in</item>
        <item name="android:windowExitAnimation">@anim/buttom_out</item>
    </style>
    <!-- 自定义  dialog样式 -->
    <style name="m_dialog_title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dialog_title</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="m_dialog_button">
        <item name="android:textSize">@dimen/dialog_button</item>
        <item name="android:background">@drawable/btn_dialog_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <!-- 自定义  dialog样式 -->
    <style name="MyDialog_NoTitle" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/touming</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyDialog_NoTitle_touming" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/touming</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>

    <!-- 自定义  样式 -->
    <style name="Setting_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dip</item>
        <item name="android:textColor">@color/heise</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">5dip</item>
    </style>

    <style name="SetTing_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dip</item>
    </style>
    <!-- 商品items集合 -->
    <style name="m_order_item">
        <item name="android:textSize">@dimen/list_item_inner_info</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:textColor">@color/heise</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <!-- 背景透明 -->
    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 半背景透明 -->
    <style name="TransparentB">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>

    <style name="m_add_customer_text">
        <item name="android:textSize">@dimen/dialog_label</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
    </style>

    <style name="m_add_customer_edit">
        <item name="android:textSize">@dimen/dialog_edit</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/login_panel_edit_bg</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
    </style>

    <style name="m_text">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.3</item>
        <item name="android:textColor">@color/yanse</item>
        <item name="android:textSize">@dimen/dialog_label</item>
    </style>

    <style name="m_edtext">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:layout_marginLeft">2.0dip</item>
        <item name="android:layout_marginRight">2.0dip</item>
        <item name="android:layout_weight">3.0</item>
        <item name="android:background">@drawable/login_panel_edit_bg</item>
        <item name="android:textSize">@dimen/dialog_edit</item>
    </style>

</resources>