<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:focusableInTouchMode="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="5.0dip"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/barcode"
                        android:textSize="@dimen/dialog_label" />

                    <TextView
                        android:id="@+id/tvBarcode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/specification"
                        android:textSize="@dimen/dialog_label" />

                    <TextView
                        android:id="@+id/tvSpecification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/ll_SaleCue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tvSaleCue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/key_board_bg"
                android:orientation="vertical"
                android:paddingBottom="10.0dip"
                android:paddingLeft="20.0dip"
                android:paddingRight="20.0dip"
                android:paddingTop="10.0dip" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/warehourse"
                        android:textSize="@dimen/dialog_label" />

                    <Button
                        android:id="@+id/btnWarehouse"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/btn_2_selector"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/unit"
                        android:textSize="@dimen/dialog_label" />

                    <Button
                        android:id="@+id/btnUnit"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/btn_2_selector"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearBatch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/product_batch_m"
                        android:textSize="@dimen/dialog_label" />

                    <Button
                        android:id="@+id/btnBatch"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/btn_2_selector"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearProDate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/product_date_m"
                        android:textSize="@dimen/dialog_label" />

                    <Button
                        android:id="@+id/btnProDate"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@color/baise"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/number"
                        android:textSize="@dimen/dialog_label" />

                    <com.ahjswy.cn.views.EditTextWithDel
                        android:id="@+id/etNum"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/login_panel_edit_bg"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/price"
                        android:textSize="@dimen/dialog_label" />

                    <com.ahjswy.cn.views.EditTextWithDel
                        android:id="@+id/etPrice"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/login_panel_edit_bg"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="小计"
                        android:textSize="@dimen/dialog_label" />

                    <com.ahjswy.cn.views.EditTextWithDel
                        android:id="@+id/etSubtotal"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/login_panel_edit_bg"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="单品折扣"
                        android:textSize="@dimen/dialog_label" />

                    <com.ahjswy.cn.views.EditTextWithDel
                        android:id="@+id/etDiscountRatio"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/login_panel_edit_bg"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="折后单价"
                        android:textSize="@dimen/dialog_label" />

                    <com.ahjswy.cn.views.EditTextWithDel
                        android:id="@+id/etDiscountPrice"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/login_panel_edit_bg"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="折后小计"
                        android:textSize="@dimen/dialog_label" />

                    <com.ahjswy.cn.views.EditTextWithDel
                        android:id="@+id/etDiscountSubtotal"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/login_panel_edit_bg"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/ll_Exhibition"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:textSize="@dimen/dialog_label" />

                    <CheckBox
                        android:id="@+id/cbExhibition"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:text="陈列品" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="备注"
                        android:textSize="@dimen/dialog_label" />

                    <com.ahjswy.cn.views.EditTextWithDel
                        android:id="@+id/etRemark"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_weight="3.0"
                        android:background="@drawable/login_panel_edit_bg"
                        android:imeOptions="actionDone"
                        android:textSize="@dimen/dialog_edit" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>