<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="@dimen/order_item_height"
    android:orientation="horizontal" >

    <TextView
        android:id="@id/tvSerialid"
        style="@style/m_order_item"
        android:layout_weight="1.0" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="2.0dip"
        android:layout_marginTop="2.0dip"
        android:layout_weight="6.0"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/tvIsPromotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="[促]"
                android:textColor="@color/red"
                android:textSize="@dimen/list_item_inner_title"
                android:visibility="gone" />

            <TextView
                android:id="@id/tvIsPromotionGive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="[搭]"
                android:textColor="@color/red"
                android:textSize="@dimen/list_item_inner_title"
                android:visibility="gone" />

            <TextView
                android:id="@id/tvIsExhibition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="[列]"
                android:textColor="@color/red"
                android:textSize="@dimen/list_item_inner_title"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvIsGive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="[赠]"
                android:textColor="@color/red"
                android:textSize="@dimen/list_item_inner_title" />

            <TextView
                android:id="@id/tvGoodsName"
                style="@style/m_order_item"
                android:gravity="left|center"
                android:textSize="@dimen/list_item_inner_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="2.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvBarcode"
                style="@style/m_order_item"
                android:gravity="left|center"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvNum"
                style="@style/m_order_item"
                android:gravity="right|center"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_Price"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="2.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvPrice"
                style="@style/m_order_item"
                android:gravity="left|center"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvDiscountRatio"
                style="@style/m_order_item"
                android:gravity="center"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvDiscountSubtotal"
                style="@style/m_order_item"
                android:gravity="right|center"
                android:textColor="@color/gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="2.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvWarehouse"
                style="@style/m_order_item"
                android:gravity="left|center"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvBatch"
                style="@style/m_order_item"
                android:gravity="right|center"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>