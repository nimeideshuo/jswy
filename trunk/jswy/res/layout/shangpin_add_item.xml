<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:ellipsize="end"
            android:gravity="left"
            android:maxEms="8"
            android:singleLine="true"
            android:text="这是测试商品"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shop_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:ellipsize="end"
            android:maxEms="8"
            android:singleLine="true"
            android:text="123454432"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/shop_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="数量"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ed_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.4"
        android:background="@drawable/btn_select_white_nor"
        android:ems="10"
        android:gravity="top"
        android:inputType="number"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_shop_dan_wei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="@drawable/btn_operation_selector"
        android:gravity="center"
        android:text="件"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_weight="1.4"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_weight="1.5"
                android:gravity="left"
                android:singleLine="true"
                android:text="上次:"
                android:textColor="#cc0000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_shangci_caigou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:layout_marginTop="3dip"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:text="1123盒"
                android:textColor="#cc0000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:layout_weight="1.5"
                android:gravity="left"
                android:singleLine="true"
                android:text="本次:"
                android:textColor="#cc0000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_kucun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dip"
                android:layout_marginTop="3dip"
                android:layout_weight="1"
                android:gravity="right"
                android:singleLine="true"
                android:text="12121件"
                android:textColor="#cc0000"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>