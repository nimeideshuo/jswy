<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/department"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <Button
                android:id="@+id/btnDepartment"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/btn_2_selector"
                android:gravity="left|center"
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/warehouse"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <Button
                android:id="@+id/btnWarehouse"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/btn_2_selector"
                android:gravity="left|center"
                android:text=""
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/customer"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <Button
                android:id="@+id/btnCustomer"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/btn_2_selector"
                android:gravity="left|center"
                android:text=""
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_phoneNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:visibility="gone" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="电话号码"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <com.ahjswy.cn.views.CleanableEditText
                android:id="@+id/et_gongYingShang_phone"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/login_panel_edit_bg"
                android:drawableRight="@drawable/search_clear_pressed"
                android:gravity="left|center"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/doc_discount"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <com.ahjswy.cn.views.EditTextWithDel
                android:id="@+id/etDiscountRatio"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/login_panel_edit_bg"
                android:gravity="left|center"
                android:inputType="numberDecimal"
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/date_of_delivery"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <Button
                android:id="@+id/btnDeliveryTime"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/btn_2_selector"
                android:gravity="left|center"
                android:text=""
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/balance_date"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <Button
                android:id="@+id/btnSettleTime"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/btn_2_selector"
                android:gravity="left|center"
                android:text=""
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/remark"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <EditText
                android:id="@+id/etRemark"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/login_panel_edit_bg"
                android:gravity="left|center"
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/summary"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <EditText
                android:id="@+id/etSummary"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/login_panel_edit_bg"
                android:gravity="left|center"
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_dispatching"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:textSize="@dimen/dialog_label" />

            <CheckBox
                android:id="@+id/cbDistribution"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_weight="3.0"
                android:text="@string/dispatching" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="@string/shipping_address"
                android:textColor="@color/yanse"
                android:textSize="@dimen/dialog_label" />

            <EditText
                android:id="@+id/etCustomerAddress"
                android:layout_width="0.0dip"
                android:layout_height="80.0dip"
                android:layout_marginLeft="2.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_weight="3.0"
                android:background="@drawable/login_panel_edit_bg"
                android:gravity="left|center"
                android:hint="双击选择配送地址"
                android:textSize="@dimen/dialog_edit" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>