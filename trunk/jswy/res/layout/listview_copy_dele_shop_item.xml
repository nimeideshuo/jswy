<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_weight="1.7"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_xuLie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dip"
            android:gravity="center_horizontal"
            android:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:singleLine="true"
            android:text="迪士尼萨法的吃的是 "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_shop_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="876543276554"
            android:textColor="@color/huise"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_shop_danJia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="21.00"
                android:textColor="@color/huise"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_shop_danJia_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/件"
                android:textColor="@color/huise"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shop_cangKu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="B仓库"
            android:textColor="@color/huise"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_shop_ZheKou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dip"
            android:gravity="center_horizontal"
            android:text="1.0"
            android:textColor="@color/huise"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.8dip"
            android:gravity="center_horizontal"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_shop_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dip"
                android:text="21.00"
                android:textColor="@color/huise"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_shop_number_danwei"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dip"
                android:text="件"
                android:textColor="@color/huise"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_shop_sum_jiaGe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dip"
                android:gravity="right"
                android:text="65.00"
                android:textColor="@color/huise"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_shop_sum_jiaGe_yuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dip"
                android:text="元"
                android:textColor="@color/huise"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>