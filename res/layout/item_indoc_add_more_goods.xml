<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.7"
        android:singleLine="true"
        android:text="这是测试商品"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_operation_selector"
        android:text="件"
        android:textSize="14sp" />

    <com.ahjswy.cn.views.CleanableEditText
        android:id="@+id/etNum"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/login_panel_edit_bg"
        android:drawableRight="@drawable/search_clear_pressed"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:singleLine="true" >
    </com.ahjswy.cn.views.CleanableEditText>

</LinearLayout>