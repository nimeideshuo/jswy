<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/lin_outin"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_xxdd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="销售订单" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sale"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_sale_open" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="销售" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />

                <LinearLayout
                    android:id="@+id/ll_return_goods"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_return_open" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="退货" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />
            </TableRow>
            <!-- 第二行 -->

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/lin_Inpurchase"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_cgrk" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="采购单" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />

                <LinearLayout
                    android:id="@id/ll_newcustomer"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_customer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="新增客户" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />

                <LinearLayout
                    android:id="@+id/ll_my_doc"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_sale_record" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="@string/my_doc" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@id/ll_stockgoods"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_stockgoods" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="@string/goods_detail_info" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />

                <LinearLayout
                    android:id="@+id/ll_my_inventory"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:visibility="invisible" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_inventory_record" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="@string/my_inventory" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />

                <LinearLayout
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:visibility="invisible" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_customer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="测试" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" >

                <LinearLayout
                    android:id="@+id/ll_addGoods"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_return_open" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="新增商品" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />

                <LinearLayout
                    android:id="@+id/outpurchase"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_customer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="采购退货" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />

                <LinearLayout
                    android:id="@+id/text"
                    style="@style/style_function_menu"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:background="@drawable/ic_menu_customer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="测试" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:background="@color/bg_main_divder" />
            </TableRow>
        </LinearLayout>
    </ScrollView>

</TableLayout>